@{
    ViewBag.Title = "用户管理";
}

<div id="tt" style="width: auto; height: auto;">
    <table id="userList"></table>
   
</div>


<div id="processWindow" class="easyui-window" closed="true" modal="true" title="提升消息" style="width:300px;height:60px">
    <div id="windowContent" class="general-font">
        <img src="~/themes/gray/images/loading.gif" />操作进行中，请稍后...
    </div>

</div>

<!--弹框-->
<div id="dlg" closed="true" class="easyui-dialog" title="新增用户" data-options="iconCls:'icon-add'" style="width:400px;height:400px;padding:10px">
    <div style="padding:10px 10px 20px 10px">
        <form id="ff" method="post">
            <table cellpadding="5">
                <tr>
                    <td style="width:30%;text-align:left" align="left">用户名称</td>
                    <td align="left"  style="text-align:left"><input id="userName" class="easyui-textbox" validType="length[1,16]" type="text" name="name" data-options="required:true" /></td>
                </tr>
                <tr>
                    <td align="left"  style="text-align:left">角色</td>
                    <td align="left"  style="text-align:left">
                        <select id="roleList" class="easyui-combobox" name="state" style="width:200px;" data-options="required:true">
                        </select>
                    </td>
                </tr>
                <tr>
                    <td align="left">密码</td>
                    <td><input id="password"class="easyui-textbox" type="password" name="name" data-options="required:true"/></td>
                </tr>
                <tr>
                    <td>状态</td>
                    <td><select id="statusSel">
                        <option value="1">开启</option>
                        <option value="2">禁用</option>
                        </select></td>
                </tr>
            </table>
            <input id="roleID" type="text" hidden="hidden"/>
            <input id="status" type="text" hidden="hidden" />
        </form>
        <div style="text-align:center;padding:5px">
            <a href="javascript:void(0)" class="easyui-linkbutton" id="submitForm">提交</a>
            <a href="javascript:void(0)" class="easyui-linkbutton" id="clearForm">清空</a>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/jsviews/user.js"></script>